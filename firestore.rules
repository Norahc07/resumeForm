rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to get app ID
    function getAppId() {
      return 'resume-builder'; // Change this to match your APP_ID
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/artifacts/$(getAppId())/users/$(request.auth.uid)/roles/admin_status) &&
             get(/databases/$(database)/documents/artifacts/$(getAppId())/users/$(request.auth.uid)/roles/admin_status).data.isAdmin == true;
    }

    // Public submissions - anyone can create, only admins can read/update/delete
    match /artifacts/{appId}/public/data/submissions/{submissionId} {
      // Allow anonymous users to create submissions
      allow create: if request.auth != null;
      
      // Only admins can read, update, or delete
      allow read, update, delete: if isAdmin();
    }

    // Admin roles - users can read their own admin status, only admins can write
    match /artifacts/{appId}/users/{userId}/roles/admin_status {
      // Allow users to read their own admin status (needed for authentication check)
      allow read: if request.auth != null && request.auth.uid == userId;
      // Only admins can write admin status
      allow write: if isAdmin();
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

